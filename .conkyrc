alignment top_right

background no
border_width 1
cpu_avg_samples 2
default_color white
default_outline_color white
default_shade_color white
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont DejaVu Sans Mono:size=12
gap_x 5
gap_y 0
minimum_size 5 5
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_class Conky
own_window_type desktop
stippled_borders 0
update_interval 1.0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no

if_up_strictness address


# should do the trick for KDE5
own_window_argb_visual true
own_window_argb_value 0
own_window_type root # was 'desktop' previously
own_window yes
own_window_transparent yes
own_window_type normal
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

# supposedly to fix blinking
double_buffer yes
TEXT
${cpugraph}
${membar}
${color }FRE: $color ${exec awk '/cpu MHz/{i++}i==1{printf "%.f",$4; exit}' /proc/cpuinfo} MHz 
$hr
${if_up wlan0}${downspeedgraph wlan0}
${color }net: $color ${downspeed wlan0} ${color} / $color ${upspeed wlan0} ${endif}${if_up ppp0}${downspeedgraph ppp0}
${color }net : $color ${downspeed ppp0} ${color } / $color ${upspeed ppp0} ${endif}
$hr
${color}${top name 1} ${top cpu 1} ${top mem 1}
${color}${top name 2} ${top cpu 2} ${top mem 2}
$hr
${exec cat ~/Pulpit/todo.txt}
