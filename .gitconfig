[color]
	ui = true
	status = auto
	branch = auto
[core]
	editor = vim
	autocrlf = input
[merge]
	conflictstyle = diff3
[user]
	name = Aleksander Grzybowski
	email = ifyouseethis@tellmeplease.it
	useconfigonly = true
[push]
	default = current
[credential]
	helper = cache --timeout=28800
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset %Cgreen%an%Creset:%C(yellow)%d%Creset %s %Cblue%cr %C(magenta)%Creset' --all
	co = checkout
    rb = rebase
	ci = commit
	br = branch -v
	st = status
	mg = merge
	pu = pull
	fe = fetch
    standup = !git --no-pager log --pretty=format:'%C(yellow)%h %Cred%ad %Creset%s' --date=short --author='Aleksander Grzybowski' -n 10
    unstage = reset -q HEAD --
    discard = checkout --
    testcommit = !echo $1 > $1 && git add $1 && git commit -m $1
    fuck = reset --hard HEAD
    gr = grep -I --ignore-case
    addamend = !git add -A && git commit --amend
[diff]
	tool = kompare
[difftool]
	prompt = false
